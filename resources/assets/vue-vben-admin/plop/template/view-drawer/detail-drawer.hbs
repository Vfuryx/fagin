<template>
  <BasicDrawer
    v-bind="$attrs"
    @register="registerDrawer"
    :showFooter="false"
    :title="getTitle"
    width="30%"
  >
    <Description @register="registerDescription" />
  </BasicDrawer>
</template>

<script lang="ts" setup name="{{ pascalCase name }}DetailDrawer">
  import { ref } from 'vue';
  import { BasicDrawer, useDrawerInner } from '/@/components/Drawer';
  import Description from '/@/components/Description/src/Description.vue';
  import { useDescription } from '/@/components/Description';

  import { detailSchema } from './{{ camelCase name }}.data';

  import { get{{ pascalCase name }}Detail } from '/@/api/{{ camelCase path }}/{{ camelCase name }}';

  const getTitle = '详情';

  const detail = ref({});
  const [registerDrawer, { changeLoading }] = useDrawerInner(async (data) => {
    changeLoading(true);
    detail.value = await get{{ pascalCase name }}Detail(data.record.id);
    changeLoading(false);
    console.log(detail.value);
  });

  const [registerDescription] = useDescription({
    title: '',
    column: 1,
    data: detail,
    schema: detailSchema,
  });
</script>
